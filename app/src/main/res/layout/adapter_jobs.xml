<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/rlClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_first"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.wokconns.customer.utils.CustomTextViewSemiBold
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black_off"
                            android:textSize="@dimen/_14sdp" />

                        <com.wokconns.customer.utils.CustomTextView
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:id="@+id/tvDecline"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="30dp"-->
<!--                        android:layout_marginStart="5dp"-->
<!--                        android:layout_weight="0.1"-->
<!--                        android:gravity="center"-->
<!--                        android:src="@drawable/ic_delete"-->
<!--                        app:tint="@color/red" />-->

                </LinearLayout>


                <View
                    android:id="@+id/view11"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ll_top"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/gray_line" />

                <com.wokconns.customer.utils.CustomTextViewSemiBold
                    android:id="@+id/tvJobId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view11"
                    android:text="@string/job_id" />

                <com.wokconns.customer.utils.CustomTextView
                    android:id="@+id/tvJobIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view11"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/tvJobId"
                    android:text="" />

                <com.wokconns.customer.utils.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvJobId"
                    android:text="" />

                <com.wokconns.customer.utils.CustomTextView
                    android:id="@+id/tvApplied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDate"
                    android:text="" />


                <com.wokconns.customer.utils.CustomTextViewSemiBold
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view11"
                    android:layout_alignParentEnd="true"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="@dimen/_13sdp" />


                <RelativeLayout
                    android:id="@+id/RRview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvApplied"
                    android:layout_marginTop="8dp">

                    <com.wokconns.customer.utils.CustomTextViewBold
                        android:id="@+id/CTVBser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/services_type"
                        android:visibility="gone" />

                    <com.wokconns.customer.utils.CustomTextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/CTVBser"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />


                    <LinearLayout
                        android:id="@+id/llStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rectangle_orange">

                        <com.wokconns.customer.utils.CustomTextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/pending"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/RRview"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/rlPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dummyuser_image" />

                    <com.wokconns.customer.utils.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/ivImage"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/ivImage">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_placeholder" />

                        <com.wokconns.customer.utils.CustomTextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rlComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlPhoto"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <com.wokconns.customer.utils.CustomTextView
                        android:id="@+id/tvEdit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/view1"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="@string/edit"
                        android:textSize="14sp" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line" />

                    <com.wokconns.customer.utils.CustomTextView
                        android:id="@+id/tvComplete"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/view2"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="@string/complete"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>